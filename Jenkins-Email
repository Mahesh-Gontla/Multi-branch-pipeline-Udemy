pipeline{
    agent any
    stages{
        stage("test email"){
            steps{
                echo "hello"
            }
        }
    }
    post {
       always {
           emailext body: 'Job is completed', subject: 'Job status', to: 'mahesh-devops@sharklasers.com'
            }
        
    }

}

pipeline{
    agent{
        label 'worker'
    }
    stages{
        stage("first stage"){
            steps{
                echo "this is from worker node"
            }
            
        }
    }
}
